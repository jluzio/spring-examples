<div id="todos-div">
  <table class="table table-striped table-sm">
    <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">name</th>
      <th scope="col">description</th>
      <th scope="col">actions</th>
    </tr>
    </thead>
    <tbody>
    {{#todos}}
    <tr hx-get="/components/mustache/todos/{{id}}"
        hx-trigger="click"
        hx-target="#todo-div"
        hx-swap="outerHTML"
    >
      <th scope="row">
        {{id}}
      </th>
      <td>
        {{name}}
      </td>
      <td>
        {{description}}
      </td>
      <td class="col">
      </td>
    </tr>
    {{/todos}}
    </tbody>
  </table>
  <div id="todo-div"></div>
</div>
